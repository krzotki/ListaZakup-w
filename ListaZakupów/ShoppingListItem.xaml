             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListaZakupów"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="150" Height="50" MinWidth="1" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Foreground="White">
