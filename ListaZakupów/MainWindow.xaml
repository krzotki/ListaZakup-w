<Window x:Class="ListaZakupów.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListaZakupów"
        mc:Ignorable="d"
        Title="MainWindow" Height="570" Width="1076">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="122*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="shoppingList" Margin="10,10,907,10" Grid.RowSpan="3"/>
        <WrapPanel x:Name="contentContainer" Margin="0,59,10,10" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Grid.RowSpan="3" HorizontalAlignment="Right" Width="876"/>
        <Button x:Name="buttonDishes" Content="Dishes" Margin="0,10,755,0" Click="handleBookmarkClick" HorizontalAlignment="Right" Width="131" Height="44" VerticalAlignment="Top"/>
        <Button x:Name="buttonIngredients" Content="Single products" Margin="0,10,619,0" Click="handleBookmarkClick" HorizontalAlignment="Right" Width="131" Height="44" VerticalAlignment="Top"/>
    </Grid>
</Window>
